{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": false,
    "baseUrl": ".",
    "paths": {
      "@api/auth": ["libs/api/auth/src/index.ts"],
      "@api/projects": ["libs/api/projects/src/index.ts"],
      "@api/shared/util/database": ["libs/shared/util/database/src/index.ts"],
      "@api/shared/util/hashing": ["libs/shared/util/hashing/src/index.ts"],
      "@api/shared/util/redis": ["libs/shared/util/redis/src/index.ts"],
      "@api/users": ["libs/api/users/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
